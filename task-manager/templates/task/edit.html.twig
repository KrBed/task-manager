{% extends 'base.html.twig' %}
{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
        <div class="card shadow-sm w-50">
            <div class="card-body">
                <h1 class="h3 mb-3 font-weight-normal text-center">{{ 'Edytuj zadanie'|trans }}</h1>
                {{ form_start(form, {'attr': {'class': 'task-form'}}) }}
                <div class="mb-3">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.deadline, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.deadline, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button id="submit-btn" type="submit" class="btn btn-success w-100 mt-4">{{ 'Zapisz'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('buttonHandler') }}
{% endblock %}